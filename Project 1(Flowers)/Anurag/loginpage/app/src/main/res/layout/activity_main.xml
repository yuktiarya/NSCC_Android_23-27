<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#A3A1A1"
        app:cardCornerRadius="200dp"
        app:cardElevation="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/flower1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.5"
            android:src="@drawable/flower1" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#A3A1A1"
        app:cardCornerRadius="200dp"
        app:cardElevation="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cardView1"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/flower2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.7"
            android:src="@drawable/flower2" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#A3A1A1"
        app:cardCornerRadius="200dp"
        app:cardElevation="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/flower3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flower3" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#A3A1A1"
        app:cardCornerRadius="200dp"
        app:cardElevation="30dp"
        app:layout_constraintLeft_toRightOf="@id/cardView3"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/flower4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.7"
            android:src="@drawable/flower4" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#A3A1A1"
        app:cardCornerRadius="200dp"
        app:cardElevation="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardView3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/flower5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1.6"
            android:src="@drawable/flower5" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#A3A1A1"
        app:cardCornerRadius="200dp"
        app:cardElevation="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardView4"
        app:layout_constraintLeft_toRightOf="@id/cardView5"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/flower6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.6"
            android:src="@drawable/flower6" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
