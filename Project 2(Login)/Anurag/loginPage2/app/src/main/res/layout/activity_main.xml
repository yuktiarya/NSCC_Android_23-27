<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hdwallpapersukunayujiitadorijujutsukaisen">


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_marginTop="50dp"
            android:layout_marginStart="55dp"
            android:layout_width="300dp"
            android:layout_height="300dp"

            app:cardBackgroundColor="#A3FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="30dp"
            app:cardCornerRadius="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Gamer's World"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:background="@drawable/custom_design"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/layout1"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="64dp"
                    android:layout_height="320dp"
                    android:layout_marginTop="-50dp"
                    android:clickable="true"
                    android:scaleX="1.4"
                    android:scaleY="1.6"
                    android:src="@drawable/fingerprintscan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@id/image1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/text1"
                    android:background="@drawable/user"
                    />
                <EditText
                    android:id="@+id/text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Create a Username"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@id/gmail"
                    app:layout_constraintBottom_toTopOf="@id/text2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/gmail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="18dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/gmail"
                    app:layout_constraintTop_toBottomOf="@id/user"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/text2"
                    />

                <EditText
                    android:id="@+id/text2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter your E-mail id"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/text1"
                    app:layout_constraintLeft_toRightOf="@id/gmail"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/text3"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/padlock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="18dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@drawable/padlock"
                    app:layout_constraintTop_toBottomOf="@id/gmail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/text3"
                    />

                <EditText
                    android:id="@+id/text3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Create a Strong Password"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@id/padlock"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text2"
                    app:layout_constraintBottom_toTopOf="@id/button1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:background="@drawable/custom_design2"
                    android:elevation="80dp"
                    android:foregroundGravity="fill"
                    android:padding="14dp"
                    android:shadowColor="@color/black"
                    android:text="Sign Up"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/textv2"
                    app:layout_constraintLeft_toLeftOf="@id/layout1"
                    app:layout_constraintRight_toRightOf="@id/layout1"
                    app:layout_constraintTop_toBottomOf="@id/text3" />

                <TextView
                    android:id="@+id/textv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"

                    android:text="Already have an Account? Log in"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/layout1"
                    app:layout_constraintLeft_toLeftOf="@id/layout1"
                    app:layout_constraintTop_toBottomOf="@id/button1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="48dp"
                    android:background="@drawable/youtube"
                    app:layout_constraintBottom_toBottomOf="@id/layout1"
                    app:layout_constraintLeft_toLeftOf="@id/layout1"
                    app:layout_constraintTop_toBottomOf="@id/textv2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/google"
                    app:layout_constraintBottom_toBottomOf="@id/layout1"
                    app:layout_constraintLeft_toRightOf="@id/button2"
                    app:layout_constraintTop_toBottomOf="@id/textv2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/facebook"
                    app:layout_constraintBottom_toBottomOf="@id/layout1"
                    app:layout_constraintLeft_toRightOf="@id/button3"
                    app:layout_constraintTop_toBottomOf="@id/textv2" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


</ScrollView>